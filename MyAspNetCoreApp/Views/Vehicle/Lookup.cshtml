@{
    ViewData["Title"] = "Lookup Violations";
}

<h1>Lookup Traffic Violations</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Lookup" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
