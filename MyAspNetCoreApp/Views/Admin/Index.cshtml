@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Administration Dashboard</h1>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                User Management
            </div>
            <div class="card-body">
                <p>View and manage all users in the system.</p>
                <a asp-controller="Admin" asp-action="UserList" class="btn btn-primary">Manage Users</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Role Management
            </div>
            <div class="card-body">
                <p>View all roles in the system.</p>
                <a asp-controller="Admin" asp-action="RoleList" class="btn btn-primary">View Roles</a>
            </div>
        </div>
    </div>
</div>
