@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "User Management";
}

<h1>User Management</h1>

<div class="mb-3">
    <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    <a asp-action="EditUserRoles" asp-route-userId="@user.Id" class="btn btn-sm btn-primary">Manage Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
